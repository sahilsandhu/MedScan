<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Switch
            android:id="@+id/switch_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/mainicon" />

        <TextView
            android:id="@+id/tv_title_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cagliostro"
            android:gravity="center"
            android:text="Register as Doctor"
            android:textSize="36sp" />

        <LinearLayout
            android:id="@+id/ll_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <EditText
                android:id="@+id/doc_username_register"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/background_edittext"
                android:elevation="30dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Username or email"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:shadowColor="@color/black" />

            <EditText
                android:id="@+id/doc_age_register"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/background_edittext"
                android:elevation="30dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Age"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:shadowColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Specialization in"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_specialization"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <EditText
                android:id="@+id/doc_exp_register"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/background_edittext"
                android:elevation="30dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Years of experience"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:shadowColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <EditText
                android:id="@+id/P_username_regis"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/background_edittext"
                android:elevation="30dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Username or email"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:shadowColor="@color/black" />

            <EditText
                android:id="@+id/P_age_register"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/background_edittext"
                android:elevation="30dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Age"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:shadowColor="@color/black" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/check_TC"
            style="@android:style/Widget.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I,hereby agree to all the terms and conditions of this organization." />

        <Button
            android:id="@+id/bt_next_registration"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button"
            android:elevation="30dp"
            android:text=" Next " />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>